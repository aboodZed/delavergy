<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context="com.webapp.delavergy.utils.dialog.privacy.PrivacyFragment">

    <include layout="@layout/toolbar_notification_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <TextView
            style="@style/LargeTextViewStyle"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/terms_and_conditions" />

        <TextView
            android:id="@+id/tv_privacy"
            style="@style/mediumTextViewStyle"
            android:layout_width="match_parent"
            android:gravity="start" />

        <FrameLayout
            android:id="@+id/fl_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>