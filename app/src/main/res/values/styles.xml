<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSoftInputMode">adjustPan|adjustResize</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SmallTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="mediumTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="LargeTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="DarkButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/dark_gray_button</item>
    </style>

    <style name="BlackButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/black_button</item>
    </style>

    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accept</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/reject</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/accept</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dark_bottom_shape</item>
    </style>

</resources>